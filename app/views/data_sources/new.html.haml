%h1 New data source

= form_for @data_source do |f|
  - if @data_source.errors.any?
    #error_explanation
      %h2= "#{pluralize(@data_source.errors.count, "error")} prohibited this data source from being saved:"
      %ul
        - @data_source.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :api
    = f.text_field :api
  .field
    = f.label :path
    = f.file_field :path, accept: DataSource::VALID_CONTENT_TYPES.join(',')
  .actions
    = f.submit 'Create'

= link_to 'Back', data_sources_path
