<header id="full">
  <h3>API Key</h3>
    <p class="view"><%= link_to('Get an API Key', authenticated_root_path) %></p>
  <br/>
  <h3>Available APIs</h3>
  <% available_apis.each do |text, path| %>
    <p class="view"><%= link_to(text, "#{Rails.configuration.developerportal_url}/#{path}") %></p>
  <% end %>
  <%- if current_user && current_user.is_admin %>
    <br>
    <h3>CSV APIs <%= link_to("+", new_data_source_path ) %></h3>
    <% DataSource.all.each do |data_source| %>
      <p class="view"><%= link_to(data_source.name, url_for(data_source) ) %></p>
    <% end %>
  <% end %>

</header>
