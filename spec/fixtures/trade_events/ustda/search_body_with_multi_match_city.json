{
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "fields": [
              "registration_title",
              "description",
              "event_name",
              "venues.city",
              "venues.state",
              "venues.country",
              "contacts.first_name",
              "contacts.last_name",
              "contacts.person_title"
            ],
            "operator": "and",
            "query": "Wichita"
          }
        }
      ]
    }
  },
  "filter": {
    "bool": {
      "must": [
        {
          "range": {
            "end_date": {
              "gte": "2013-10-07"
            }
          }
        }
      ]
    }
  }
}