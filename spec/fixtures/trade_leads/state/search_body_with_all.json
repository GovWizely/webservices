{
    "filter": {
        "bool": {
            "must": [
                {
                    "terms": {
                        "country": [
                            "CN",
                            "FR"
                        ]
                    }
                }
            ]
        }
    },
    "query": {
        "bool": {
            "must": [
                {
                    "match": {
                        "industry": "fishing"
                    }
                },
                {
                    "match": {
                        "specific_location": "qatar"
                    }
                },
                {
                    "multi_match": {
                        "fields": [
                            "description",
                            "title",
                            "tags",
                            "procurement_organization"
                        ],
                        "operator": "and",
                        "query": "fish"
                    }
                }
            ]
        }
    }
}
