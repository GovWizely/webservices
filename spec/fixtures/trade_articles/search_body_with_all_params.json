{
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "fields": ["title", "content"],
            "operator": "and",
            "query": "some term"
          }
        }
      ]
    }
  },
  "filter": {
    "bool": {
      "must": [
        {
          "range": {
            "pub_date": {
              "from": "2013-10-17",
              "to": "2013-10-17"
            }
          }
        },
        {
          "range": {
            "update_date": {
              "from": "2013-10-17",
              "to": "2013-10-17"
            }
          }
        },
        {
          "term": {
            "evergreen": true
          }
        },
        {
          "terms": {
            "country": ["IL", "US"]
          }
        }
      ]
    }
  }
}